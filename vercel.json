{
  "version": 2,
  "functions": {
    "api/worker.js": {
      "maxDuration": 300
    },
    "api/status.js": {
      "maxDuration": 30
    },
    "api/schedules.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/worker",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/schedules",
      "schedule": "0 */6 * * *"
    }
  ]
} 