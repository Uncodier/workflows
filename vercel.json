{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run vercel:build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/status",
      "dest": "/api/status.js"
    },
    {
      "src": "/api/worker",
      "dest": "/api/worker.js"
    },
    {
      "src": "/api/execute",
      "dest": "/api/execute-workflow.js"
    },
    {
      "src": "/api/schedules",
      "dest": "/api/schedules.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/worker.js"
    }
  ],
  "crons": [
    {
      "path": "/api/worker",
      "schedule": "*/5 * * * *"
    }
  ]
} 